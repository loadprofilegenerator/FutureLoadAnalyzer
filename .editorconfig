
[*.{c,c++,cc,cp,cpp,cu,cuh,cxx,h,hh,hpp,hxx,inc,inl,ino,ipp,mpp,proto,tpp}]
indent_style=tab
indent_size=tab
tab_width=4

[*.{asax,ascx,aspx,cs,css,js,master,skin,ts,tsx,vb,xaml,xamlx,xoml}]
indent_style=space
indent_size=4
tab_width=4

[*.{appxmanifest,build,config,cshtml,csproj,dbml,discomap,dtd,htm,html,json,jsproj,jsx,lsproj,njsproj,nuspec,proj,props,razor,resjson,resw,resx,StyleCop,targets,tasks,vbproj,xml,xsd}]
